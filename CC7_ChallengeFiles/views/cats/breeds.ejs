
<!-- Include head and header partials here -->
<%- include('../partials/head.ejs', {title: "Breeds"}) %>
<%- include('../partials/header.ejs') %>

<!-- Create div that display all the breeds and their corresponding images from MongoDB. 
    This data should come from the server.js files that will fetch the required data from MongoDB, -->

    <!-- Each div element should be wrapped with an anchor tag that redirects the user to that particular breed's detail route i.e. '/breed/:breedId'  by passing its ID in the URL -->

    <div>
        <% breeds.forEach(breed => { %>
            <a href="/breed/<%= breed._id %>">
                <div>
                    <img src="<%= breed.image%>" alt="<%= breed.breed %> Image">
                    <!-- <br> -->
                    <strong>Breed:</strong> <%= breed.breed %> <br>
                </div>
            </a>

        <% }) %>
    </div>

