<%- include('../partials/head.ejs', { title: "Login", style: style }) %>
<%- include('../partials/header_sign-log.ejs') %>

<div class="container">
    <h1 class="title">Login</h1>
    <div class="form_login" action="/login" method="POST">
        <!-- Display an error message if there was an issue loggin in the user after submitting the form -->
        <form class="form1">
            <% if (errorMessage) { %>
                <div class="alert alert-danger" role="alert">
                    <%= errorMessage %> 
                  </div>
            <% } %>
            <div class="form-group">
              <label for="exampleInputUsername">Username</label>
              <input name="username" type="text" class="form-control" id="exampleInputUsername" placeholder="Enter Username">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">Log in</button>
        </form>
    </div>
</div>

